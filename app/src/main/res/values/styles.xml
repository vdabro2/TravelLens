<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonAll" parent="@style/Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeColor">@color/silver</item>
        <item name="fontFamily">@font/copse</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.Material3.Chip.Filter">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeColor">@color/silver</item>
        <item name="fontFamily">@font/copse</item>
    </style>

    <style name="message" parent="@style/Widget.Material3.Chip.Filter">
        <item name="android:fontFamily">@font/copse</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>

    </style>


</resources>