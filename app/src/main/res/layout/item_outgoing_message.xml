<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivRecipientProfilePic2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tvMessage2"
        style="@style/message"
        android:layout_marginEnd="10dp"
        android:background="@drawable/outgoing_message"
        android:minWidth="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRecipientProfilePic2"
        app:layout_constraintEnd_toStartOf="@+id/ivRecipientProfilePic2"
        app:layout_constraintTop_toTopOf="@+id/ivRecipientProfilePic2" />
</androidx.constraintlayout.widget.ConstraintLayout>