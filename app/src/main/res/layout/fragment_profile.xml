<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPP2"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvRealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivPP2"
            app:layout_constraintStart_toStartOf="@+id/ivPP2"
            app:layout_constraintTop_toBottomOf="@+id/ivPP2" />

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="224dp"
            android:layout_height="32dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRealName" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGrid"
            android:layout_width="396dp"
            android:layout_height="521dp"
            android:layout_margin="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layoutDirection="ltr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bEditProfile" />

        <Button
            android:id="@+id/bEditProfile"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:background="@drawable/mysharebutton"
            android:text="@string/edit_prof"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBio" />

        <Button
            android:id="@+id/bMySaves"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:background="@drawable/mysharebutton"
            android:text="@string/saved"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintStart_toEndOf="@+id/bEditProfile"
            app:layout_constraintTop_toBottomOf="@+id/tvBio" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>