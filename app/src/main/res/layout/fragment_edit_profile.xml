<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.EditProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvSaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/etPassEdit"
            app:layout_constraintHorizontal_bias="0.669"
            app:layout_constraintStart_toStartOf="@+id/etPassEdit"
            app:layout_constraintTop_toBottomOf="@+id/etPassEdit" />

        <TextView
            android:id="@+id/tvResetChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Reset"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvSaveChanges"
            app:layout_constraintStart_toStartOf="@+id/etPassEdit"
            app:layout_constraintTop_toBottomOf="@+id/etPassEdit" />

        <EditText
            android:id="@+id/etPassEdit"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/borderet"
            android:ems="10"
            android:hint="  Password"
            android:inputType="textPersonName"
            android:password="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUsernameOnEdit" />

        <EditText
            android:id="@+id/etNameOnEdit"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:background="@drawable/borderet"
            android:ems="10"
            android:hint=" Name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivChangePP" />

        <EditText
            android:id="@+id/etBiographyOnEdit"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderet"
            android:ems="10"
            android:hint=" Biography"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/etNameOnEdit"
            app:layout_constraintTop_toBottomOf="@+id/etNameOnEdit" />

        <TextView
            android:id="@+id/tvLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Log Out"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivChangePP"
            android:layout_width="114dp"
            android:layout_height="110dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvChangePP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="128dp"
            android:text="Change Profile Photo"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ivChangePP"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/etUsernameOnEdit"
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/borderet"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  Username"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etBiographyOnEdit" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>