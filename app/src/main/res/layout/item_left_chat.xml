<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivRecipientProfilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tvRecipientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRecipientProfilePic"
        app:layout_constraintStart_toEndOf="@+id/ivRecipientProfilePic"
        app:layout_constraintTop_toTopOf="@+id/ivRecipientProfilePic">

    </TextView>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/left_chat"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/ivRecipientProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/ivRecipientProfilePic" />

</androidx.constraintlayout.widget.ConstraintLayout>