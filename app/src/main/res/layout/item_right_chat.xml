<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRecipientProfilePic2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tvRecipientName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:layout_constraintEnd_toStartOf="@+id/tvMessage2"
        app:layout_constraintTop_toTopOf="@+id/ivRecipientProfilePic">

    </TextView>

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/left_chat"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/ivRecipientProfilePic2"
        app:layout_constraintStart_toStartOf="@+id/ivRecipientProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/ivRecipientProfilePic" />
</androidx.constraintlayout.widget.ConstraintLayout>