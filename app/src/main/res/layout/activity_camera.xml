<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">


    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/camera_activity_background"
        android:transitionName="background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <Button
        android:id="@+id/bFromGallery"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="236dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/copse"
        android:text="upload from gallery"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivCamera"
        app:layout_constraintTop_toBottomOf="@+id/ivIconOnCamera"
        app:strokeColor="@color/black" />

    <Button
        android:id="@+id/bFromCamera"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="228dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/copse"
        android:text="upload from camera"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bFromGallery"
        app:layout_constraintStart_toStartOf="@+id/bFromGallery"
        app:layout_constraintTop_toTopOf="@+id/bFromGallery"
        app:strokeColor="@color/black" />

    <ImageView
        android:id="@+id/ivIconOnCamera"
        android:layout_width="168dp"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/name_of_app" />

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="88dp"
        android:layout_height="63dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivIconOnCamera"
        app:srcCompat="@drawable/camerafrom" />

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="86dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCamera"
        app:srcCompat="@drawable/add_pp" />

</androidx.constraintlayout.widget.ConstraintLayout>